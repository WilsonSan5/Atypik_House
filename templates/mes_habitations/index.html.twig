{% extends 'base.html.twig' %}

{% block title %}Hello MesHabitationsController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Vos habitations</h1>
      {{dump(user_habitations)}}
    <table class="table">
        <thead>
            <tr>
                {# <th>Id</th> #}
                <th>Titre</th>
                <th>Adresse</th>
                {# <th>Image</th> #}
                {# <th>Note</th> #}
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for habitat in user_habitations %}
            <tr>
                {# <td>{{ habitat.id }}</td> #}
                <td>{{ habitat.titre }}</td>
                <td>{{ habitat.adresse }}</td>
                {# <td>{{ habitat.image }}</td> #}
                {# <td>{{ habitat.note }}</td> #}
                <td>
                    <a href="{{ path('app_habitats_show', {'id': habitat.id}) }}">show</a>
                    <a href="{{ path('app_habitats_edit', {'id': habitat.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    



</div>
{% endblock %}
