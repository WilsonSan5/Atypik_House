{% extends 'base.html.twig' %}

{% block title %}Inscription
{% endblock %}
{% form_theme registrationForm 'bootstrap_5_layout.html.twig' %}
{% block body %}
	<style>
		#section-form {
			height: 100vh;
			background: url('../../img/bg_2.jpg'), linear-gradient(rgba(0, 0, 0, 0.2), rgba(0, 0, 0, 0.7));

			background-position: center;
			background-size: cover;
			background-repeat: no-repeat;
			background-blend-mode: multiply;
			overflow-y: hidden;
		}
		#form-box {
			border-radius: 10px;
			background-color: rgba(255, 255, 255, 1);
			color: black;
			padding : 20px;
		}
		#form-box button {
			color: white;
			background-color: orange;
			border: 1px solid white;
			border-radius: 30px;
		}
		#form-box input{
			background: #eeeeee;
		}

	</style>
	<section class=' d-flex align-items-center ' id='section-form'>

<div class='container'>
		<div id='form-box' class='col-5'>
			<h2 class='col-5'>Inscription</h2>
			{{ form_start(registrationForm) }}
			<div class='row'>
				<div class='col-6'>
					{{ form_row(registrationForm.nom) }}
				</div>
				<div class='col-6'>
					{{ form_row(registrationForm.prenom,{
				'label': 'Pr√©nom'
			}) }}
				</div>
			</div>
			{{ form_row(registrationForm.email) }}
			{{ form_row(registrationForm.plainPassword, {
            label: 'Mot de passe'
        }) }}
			{{ form_row(registrationForm.agreeTerms) }}

			<button type="submit" class="btn text-center">Inscription</button>
			{{ form_end(registrationForm) }}
		</div>
</div>
	</section>

{% endblock %}
